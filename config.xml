<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns		= "http://www.w3.org/ns/widgets"
	xmlns:gap	= "http://phonegap.com/ns/1.0"
	id		= "com.vetprovisions.dosecalculator"
	version 	= "1.0.0">

	<name>Vet Provisions</name>

	<description>
		An app for VetProvisions.com that helps farmers know how much medicine they need to purchase.
	</description>

	<author href="http://www.hackyourcity.com"
		email="hyd415@gmail.com">
		Andrew Hyder
	</author>

	<icon src="icon.png" gap:role="default" />
	<gap:splash src="splash.png" gap:platform="default" />
	<gap:splash src="splash.png" gap:platform="ios" />
	<gap:splash src="winphone/splash.jpg" gap:platform="winphone" />

	<preference name="permissions" value="none"/>
	<preference name="orientation" value="portrait" />
	<preference name="android-minSdkVersion" value="7" />

</widget>

